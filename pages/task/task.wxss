/* pages/task/task.wxss */

.content {
  padding: 20rpx 30rpx 0rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 210rpx;
  border-bottom: 3rpx solid #f8f8f8;
  font-size: 30rpx;
}

.content-left {
  float: left;
}

.content-left image {
  margin-right: 5px;
  width: 50px;
  height: 50px;
}

.content-right {
  padding-left: 10rpx;
  float: left;
  width: 1000rpx;
  overflow: hidden;
}

.weui-cell__bd {
  float: left;
}

.weui-cell__ft {
  float: right;
}

.content-right-top {
  height: 80rpx;
  width: 100%;
}

.content-right-top view {
  font-weight: bold;
  color: black;
}

.content-right-center {
  width: 100%;
  height: 50rpx;
}

.tasknum {
  color: #bfbfbf;
}

.content-right-bottom {
  padding-top: 20rpx;
}

.sumbit-btn {
  line-height: 45rpx;
  height: 45rpx;
  background: #f9db61;
  font-size: 30rpx;
  text-align: center;
  border-radius: 100rpx;
  width: 200rpx;
  float: right;
  border: 0;
}

.weui-cell__hd image {
  margin-right: 5px;
  width: 64px;
  height: 64px;
}

button[disabled] {
  opacity: 0.5;
}

button[disabled]:not([type]) {
  color: #8a8a8a;
  background-color: #f9db61;
}

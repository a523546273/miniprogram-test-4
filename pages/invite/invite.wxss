/* pages/invite/invite.wxss */

.pg {
  width: 100%;
  height: 100%;
}

.pg-head {
  width: 100%;
}

.pg-head image {
  width: 100%;
}

.pg-bd {
  padding-left: 20rpx;
}

.content {
  margin-top: 40rpx;
}

.content-top {
  font-weight: bold;
    display: inline-block;
  vertical-align: middle;
}


.content-top text {
  padding-left: 10rpx;
}

.content-bottom {
  height: 80rpx;
}

.content-bottom-left {
  width: 60%;
  height: 100%;
  float: left;
  color: rgb(151, 151, 151);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content-bottom-right {
  width: 40%;
  height: 100%;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content-btn {
  width: 220rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: rgb(255, 218, 68);
  border-radius: 100rpx;
  font-size: 30rpx;
}

.pg-bt {
  margin-top: 20rpx;
  display: block;
}

.pg-bt-content {
  padding: 20rpx 30rpx;
  border: 5rpx solid rgb(255, 218, 68);
  background-color: rgb(255, 249, 219);
  border-radius: 30rpx;
  width: 82%;
  margin: 0 auto;
}

.pg-bt-content-top {
  font-weight: bold;
}

.pg-bt-content-center {
  margin-top: 20rpx;
  color: rgb(151, 151, 151);
  font-size: 30rpx;
}
